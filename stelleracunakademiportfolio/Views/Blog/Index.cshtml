﻿@model List<stelleracunakademiportfolio.Models.tbl_Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}


<h3>Bloğum</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Makale Başlığı</th>
        <th>Bağlantı</th>
        <th>Açıklama</th>
        <th>Yazar</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Url</td>
            <td>@item.Description</td>
            <td>@item.Writer</td>

            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>

<br />

<a href="/Blog/AddBlog" class="btn btn-outline-primary">Yeni Makale Ekle</a>

